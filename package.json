{
  "name": "react-electron-win-office",
  "version": "1.0.1",
  "main": "dist/main.js",
  "scripts": {
    "build": "cross-env NODE_ENV=production ts-node --project ./scripts/tsconfig.json ./scripts/build.ts",
    "dev": "cross-env NODE_ENV=development ts-node --project ./scripts/tsconfig.json ./scripts/devRunner.ts",
    "test": "npm run lint && npm run build && npm run test:unit",
    "test:unit": "karma start ./scripts/karma/karma.conf.ts",
    "lint": "npm-run-all lint:*",
    "lint:ts": "tslint \"{src/**/*,scripts/**/*,test/**/*}.{ts,tsx}\" -p tsconfig.json",
    "lint:prettier": "prettier \"{src/**/*,scripts/**/*,test/**/*}.{js,jsx,ts,tsx,css}\" --list-different",
    "fix": "npm-run-all fix:*",
    "fix:ts": "npm run lint:ts -- --fix",
    "fix:prettier": "prettier \"{src/**/*,scripts/**/*,test/**/*}.{js,jsx,ts,tsx,css}\" --write",
    "precommit": "lint-staged",
    "release": "npm run clean:release && cross-env NODE_ENV=production electron-builder build --win",
    "clean:release": "rimraf ./release"
  },
  "lint-staged": {
    "linters": {
      "{src,test}/**/*.{js,ts,tsx}": [
        "prettier",
        "tslint -p tsconfig.json"
      ]
    }
  },
  "private": true,
  "pre-push": [
    "validate"
  ],
  "husky": {
    "hooks": {
      "post-commit": "git reset",
      "pre-commit": "lint-staged"
    }
  },
  "productName": "electron-win",
  "build": {
    "appId": "electron-win",
    "asar": true,
    "directories": {
      "output": "./release"
    },
    "files": [
      "dist",
      "package.json"
    ],
    "win": {
      "icon": "resources/icons/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "ia32",
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "perMachine": false,
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "include": "resources/windows/installer.nsh"
    }
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/classnames": "^2.2.8",
    "@types/html-webpack-plugin": "^3.2.0",
    "@types/mini-css-extract-plugin": "^0.2.1",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.0.8",
    "@types/react": "^16.8.19",
    "@types/react-dom": "^16.8.4",
    "@types/react-hot-loader": "^4.1.0",
    "@types/react-redux": "^7.1.0",
    "@types/react-router": "^5.0.2",
    "@types/react-router-dom": "^4.3.4",
    "@types/react-router-redux": "^5.0.18",
    "@types/webpack": "^4.4.34",
    "@types/webpack-dev-middleware": "^2.0.3",
    "@types/webpack-dev-server": "^3.1.6",
    "@types/webpack-hot-middleware": "^2.16.5",
    "@uifabric/fluent-theme": "^7.1.4",
    "autoprefixer": "^9.6.0",
    "chai": "^4.2.0",
    "chalk": "^2.4.2",
    "classnames": "^2.2.6",
    "core-js": "^3.1.4",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.1",
    "delay": "^4.3.0",
    "electron": "^5.0.7",
    "electron-builder": "^21.2.0",
    "file-loader": "^4.0.0",
    "html-webpack-plugin": "3.0.7",
    "husky": "2.4.1",
    "karma": "6.3.14",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.0.0",
    "karma-mocha": "^1.3.0",
    "karma-typescript": "^4.1.0",
    "lint-staged": "^8.2.0",
    "mini-css-extract-plugin": "^0.7.0",
    "mocha": "^6.1.4",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "postcss-loader": "^3.0.0",
    "prettier": "1.18.2",
    "react-hot-loader": "^4.11.1",
    "rimraf": "^3.0.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "svg-inline-loader": "^0.8.0",
    "ts-loader": "^6.0.2",
    "ts-node": "^8.3.0",
    "tslint": "^5.17.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.5.1",
    "url-loader": "^2.0.0",
    "webpack": "^4.31.0",
    "webpack-cli": "^3.3.2",
    "webpack-dev-middleware": "^3.7.0",
    "webpack-dev-server": "^3.3.1",
    "webpack-hot-middleware": "^2.24.0"
  },
  "dependencies": {
    "office-ui-fabric-react": "^7.25.0",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-redux": "^7.1.1",
    "react-router": "^5.0.1",
    "react-router-dom": "^5.0.1",
    "react-router-redux": "^4.0.8",
    "redux": "^4.0.4"
  }
}
